<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JhonatanParedes.Login">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="UNIVERSIDAD ISRAEL"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese su usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese su contraseña" IsPassword="True"/>

         <Button x:Name="btnIniciar" Text="INICIAR SESIÓN" Clicked="btnIniciar_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>